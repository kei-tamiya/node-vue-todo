doctype html
html(lang="ja")
    head
        meta(charset="utf-8")
        link(rel="stylesheet" type="text/css" href="/css/task.css")
        title Node-Vue-Todo | SHow
        script(
        src="https://code.jquery.com/jquery-2.2.4.min.js"
        integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
        crossorigin="anonymous")
            link(rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
            integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
            crossorigin="anonymous")
        script(src="https://cdn.socket.io/socket.io-1.2.0.js")
    body
        h1 Node-Vue-Todo | Rooms#show
        div.container
            div.row
                div.col-sm-6.col-sm-offset-3
                    div.newTodoForm#wrapTodos
                        form.form(v-on:submit.prevent="addTask")
                            div.form-group
                                input(type="text" v-model="newTask"  placeholder="new task ...").form-control
                            div.form-group
                                div(v-for="(task, index) in tasks")
                                    h2(v-bind:class="{completed: task.completed}")
                                        span
                                            input(type="checkbox" v-on:click="toggleComplete(index)" v-model="task.completed")
                                            input(type="text" v-on:blur="updateTitle(index)" v-on:keyup.enter="updateTitle(index)" v-model="task.title")
                                        span
                                            input.btn(type="button" v-on:click="deleteTask(index)" value="x")
                    ul#messages
                    form#testForm
                        input#m(autocomplete="off" valu="send")

        script(src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.1.4/vue.min.js")
        script(src="https://cdn.jsdelivr.net/vue.resource/1.0.3/vue-resource.min.js")
        script(src="/js/task.js")