        div.container
            div.row
                div.col-sm-6.col-sm-offset-3
                    div.newTodoForm#wrapTodosTest
                        div.form-group
                            input(type="text" v-model="newTask" v-on:keyup.enter="add" placeholder="new task ...").form-control
                        div.form-group
                            div(v-for="value in tasks")
                                h2 {{value.title}}
